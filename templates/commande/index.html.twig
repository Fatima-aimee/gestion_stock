{% extends "base.html.twig" %}

{% block body %}

<div class="container mt-4">

    <!-- Titre + Bouton -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Liste des Commandes</h2>
        <a href="/commande/add" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Nouvelle Commande
        </a>
    </div>

    <!-- Liste -->
    <div class="card shadow border-0 rounded-4">
        <div class="card-body p-4">

        {% if commandes|length > 0 %}

            <div class="table-responsive">
                <table class="table align-middle table-hover">
                    <thead class="table-light">
                        <tr>
                            <th class="text-center">Code</th>
                            <th class="text-center">Date</th>
                            <th class="text-center">Montant Total</th>
                            <th class="text-center">Produits</th>
                        </tr>
                    </thead>

                    <tbody>

                    {% for commande in commandes %}
                        <tr>
                            <td class="text-center">
                                CMD{{ commande.id }}
                            </td>

                            <td class="text-center">
                                {{ commande.date|date("d/m/Y") }}
                            </td>

                            <td class="text-center">
                                {{ commande.montant }} FCFA
                            </td>

                            <td>
                                <div class="d-flex flex-column gap-2">
                                    {% for achat in commande.achats %}
                                        <div class="d-flex justify-content-between align-items-center border rounded-3 p-2 bg-light">

                                            <div>
                                                <strong>{{ achat.produit.libelle }}</strong><br>
                                                <small class="text-muted">
                                                    {{ achat.qteAchete }} x {{ achat.prixUnitaire }} FCFA
                                                </small>
                                            </div>

                                            <span class="badge bg-primary">
                                                {{ achat.montant }} FCFA
                                            </span>

                                        </div>
                                    {% endfor %}
                                </div>
                            </td>

                        </tr>
                    {% endfor %}

                    </tbody>
                </table>
            </div>

            

        {% else %}

            <div class="text-center alert alert-danger">
                Aucune commande enregistr√©e
            </div>

        {% endif %}

        </div>
    </div>

</div>

{% endblock %}