{% extends "base.html.twig" %}

{% block custumStylesheets %}
    <style>
        .form-section {
            padding: 1rem 1.2rem;
        }
        .form-label {
            font-weight: 600;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3>Ajouter Catégorie</h3>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body form-section">

            <form method="post">
                <div class="row g-4">

                    <!-- Libellé -->
                    <div class="col-md-12">
                        <label class="form-label">Libellé</label>
                        <input type="text" name="libelle" placeholder="Libellé" required class="form-control">
                    </div>

                    <!-- Bouton -->
                    <div class="col-md-12 mt-3 text-end">
                        <button type="submit" class="btn btn-primary">Ajouter</button>
                    </div>

                    <!-- Lien liste -->
                    <div class="col-md-12 mt-2">
                        <a href="/categorie" class="text-decoration-none">Voir liste</a>
                    </div>

                </div>
            </form>

        </div>
    </div>

</div>
{% endblock %}